<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <!-- web.menu inherit para community - AX4B -->
    <t t-inherit="web.Menu" t-inherit-mode="extension" owl="1">
        <xpath expr="//nav[hasclass('o_main_navbar')]" position="replace">
            <nav class="o_main_navbar">
                <div class="top_heading">
                    <ul class="o_menu_apps">
                        <a id="openSidebar" style="display: block; cursor: pointer; color: #FFFFFF">
                            <i class="fa fa-bars fa-lg" />
                        </a>
                        <a id="closeSidebar" style="display: none; cursor: pointer; color: #FFFFFF">
                            <i class="fa fa-bars fa-lg" />
                        </a>
                    </ul>
                    <a class="o_menu_brand" role="button" style="display: none" />
                </div>
                <a href="#" class="fa fa-th o_menu_toggle" title="Applications" aria-label="Applications"
                    accesskey="h" />
                <ul class="dropdown" role="menu" style="display: none; cursor: pointer; color: #FFFFFF"/>
                <ul class="o_menu_sections" role="menu" />
                <ul class="o_menu_systray topbar_icon" role="menu" />
                <button type="button" class="fa fa-bars float-right d-block d-md-none o_mobile_menu_toggle"
                    title="Toggle menu" aria-label="Toggle menu" />
            </nav>
        </xpath>
    </t>
</templates>